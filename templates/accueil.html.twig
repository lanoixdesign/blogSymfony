<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>

    <link  type="text/css" rel="stylesheet" href="{{ asset('css/style.css') }}">
</head>
<body>
<header>
    <div class="logo ">
        <img class="img-fluid" src="{{ asset('img/logo_google.png') }}" alt="logo" width="850" height="300"></div>
    <nav>
        <ul>
            <li> <a href="{{ path('accueil') }}">Accueil</a></li>
           <li> <a href="{{ path('articles', { 'id': 1 }) }}">Article 1</a></li>
           <li> <a href="{{ path('articles', { 'id': 2 }) }}">Article 2</a></li>

        </ul>
    </nav>
</header>

<main>

    <div id="blocArticles">



        <ul>

            {% for key, articles in article %}
                {% if articles.published %}
            <li>
                <img src="{{ articles.image }}" alt="{{ articles.title }}">

                <p><strong><a href="{{ path('articles',{'id': key}) }}">{{ articles.title | upper }}</a></strong></p>

                <p>{{ articles.content }}</p>
            </li>
                {% endif %}
            {% endfor %}

        </ul>




    </div>

</main>

<footer>

    <nav>

            <ul>
                <li> <a href="{{ path('accueil') }}">Accueil</a></li>
                <li> <a href="{{ path('articles', { 'id': 1 }) }}">Article 1</a></li>
                <li> <a href="{{ path('articles', { 'id': 2 }) }}">Article 2</a></li>

            </ul>

    </nav>

</footer>

</body>
</html>